pipeline {
    agent any
    
    stages {
        stage ('Test Stage') {
            steps {
                echo "GIT URL: ${GIT_URL}"
                echo "BRANCH: ${GIT_BRANCH}"
                echo "COMMIT: ${GIT_COMMIT}"
                sh 'ls -al'
            }
        }

        stage ('Base Pipeline - featureX Branch') {
            when {
                branch 'featureX'
            }
            steps {
                echo 'Branch is featureX'
            }
        }

        stage ('Base Pipeline - dev Branch') {
            when {
                branch 'dev'
            }
            steps {
                echo 'Branch is dev'
            }
        }

        stage ('Base Pipeline - main Branch') {
            when {
                branch 'main'
            }
            steps {
                echo 'Branch is main'
            }
        }
    }
}