pipeline {
    agent any
    
    stages {
        stage ('Build') {
            steps {
                echo "[INFO] GIT URL: ${GIT_URL}"
                echo "[INFO] BRANCH: ${GIT_BRANCH}"
                echo "[INFO] COMMIT: ${GIT_COMMIT}"
                echo ""
                echo "[INFO] Starting build process..."
                dir('./app') {
                    sh 'mvn clean package'
                }
                echo "[INFO] Build process has finished."
            }
        }

        stage ('Base Pipeline - featureX Branch') {
            when {
                branch 'origin/featureX'
            }
            steps {
                echo 'Branch is featureX'
            }
        }

        stage ('Base Pipeline - dev Branch') {
            when {
                branch 'origin/dev'
            }
            steps {
                echo 'Branch is dev'
            }
        }

        stage ('Base Pipeline - main Branch') {
            when {
                branch 'origin/main'
            }
            steps {
                echo 'Branch is main'
            }
        }
    }
}