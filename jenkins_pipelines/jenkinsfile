pipeline {
    agent any
    
    stages {
        stage ('Build') {
            steps {
                echo "[INFO] GIT_BRANCH: ${GIT_BRANCH}"
                echo "[INFO] GIT_LOCAL_BRANCH: ${GIT_LOCAL_BRANCH}"
                echo "[INFO] GIT_COMMIT: ${GIT_COMMIT}"
                echo "[INFO] GIT_URL: ${GIT_URL}"
                echo "[INFO] GIT_REVISION: ${GIT_REVISION}"
                echo ""
                echo "[INFO] Starting build process..."
                dir('./app') {
                    sh 'mvn clean package'
                }
                echo "[INFO] Build process has finished."
            }
        }

        stage ('Base Pipeline - featureX Branch') {
            when {
                expression { ENV_BRANCH == 'origin/featureX' }
            }
            steps {
                echo 'Branch is featureX'
            }
        }

        stage ('Base Pipeline - dev Branch') {
            when {
                expression { ENV_BRANCH == 'origin/dev' }
            }
            steps {
                echo 'Branch is dev'
            }
        }

        stage ('Base Pipeline - main Branch') {
            when {
                expression { ENV_BRANCH == 'origin/main' }
            }
            steps {
                echo 'Branch is main'
            }
        }
    }
}