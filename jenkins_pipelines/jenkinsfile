pipeline {
    agent any

    environment {
        VAR_GIT_BRANCH = "${GIT_BRANCH}"
        VAR_GIT_COMMIT = "${GIT_COMMIT}"
        VAR_GIT_URL = "${GIT_URL}"
    }

    stages {
        stage ('Build') {
            steps {
                sh "echo $x_github_event"
                echo "[INFO] GIT_BRANCH: ${VAR_GIT_BRANCH}"
                echo "[INFO] GIT_COMMIT: ${VAR_GIT_COMMIT}"
                echo "[INFO] GIT_URL: ${VAR_GIT_URL}"
                echo ""
                echo "[INFO] Starting build process..."
                dir('./app') {
                    sh 'mvn clean package'
                }
                echo "[INFO] Build process has finished."
            }
        }

        stage ('Base Pipeline - featureX Branch') {
            when {
                expression { ${VAR_GIT_BRANCH} == 'origin/featureX' }
            }
            steps {
                echo 'Branch is featureX'
            }
        }

        stage ('Base Pipeline - dev Branch') {
            when {
                expression { ${VAR_GIT_BRANCH} == 'origin/dev' }
            }
            steps {
                echo 'Branch is dev'
            }
        }

        stage ('Base Pipeline - main Branch') {
            when {
                expression { ${VAR_GIT_BRANCH} == 'origin/main' }
            }
            steps {
                echo 'Branch is main'
            }
        }
    }
}