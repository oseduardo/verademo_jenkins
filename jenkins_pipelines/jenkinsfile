pipeline {

  agent any

  triggers {
    GenericTrigger(
     genericVariables: [
      [key: 'ref', value: '$.ref']
     ],
     
     causeString: 'Triggered on $ref',
     
     printContributedVariables: true,
     printPostContent: false,
    )
  }

  stages {
    stage('Some step') {
      steps {
        sh "echo $ref"
      }
    }
  }
}