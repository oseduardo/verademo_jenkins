pipeline {
    agent any

    triggers {
        GenericTrigger(
            genericHeaderVariables: [
                [key: 'x_github_event', regexpFilter: '']
            ],

            printContributedVariables: true,
            printPostContent: true
        )
    }
   
    environment {
        VAR_GIT_BRANCH = "${GIT_BRANCH}"
        VAR_GIT_COMMIT = "${GIT_COMMIT}"
        VAR_GIT_URL = "${GIT_URL}"
    }

    stages {
        stage ('Build') {
            steps {
                echo "[INFO] GIT_BRANCH: ${VAR_GIT_BRANCH}"
                echo "[INFO] GIT_COMMIT: ${VAR_GIT_COMMIT}"
                echo "[INFO] GIT_URL: ${VAR_GIT_URL}"
                echo ""
                echo "[INFO] Starting build process..."
                dir('./app') {
                    sh 'mvn clean package'
                }
                echo "[INFO] Build process has finished."
            }
        }
    }
}