pipeline {

  agent any

  triggers {
    GenericTrigger(
     genericHeaderVariables: [
        [key: 'X-GitHub-Event', regexpFilter: '']
     ],
     genericVariables: [
        [key: 'ref', value: '$.ref']
     ],
     
     causeString: 'Triggered on $ref',

     token: 'mytoken123',
     tokenCredentialId: '',
     
     printContributedVariables: true,
     printPostContent: true,
    )
  }

  stages {
    stage('Some step') {
      steps {
        sh "echo $x_github_event"
        echo "${GIT_BRANCH}"
        echo "${GIT_URL}"
        echo "${GIT_COMMIT}"
      }
    }
  }
}